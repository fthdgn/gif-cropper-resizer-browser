{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "target": "ES2021",
    "lib": [
      "ES2021",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/"
  ]
}